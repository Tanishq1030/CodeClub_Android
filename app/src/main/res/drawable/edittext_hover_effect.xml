<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused state (when EditText is clicked or hovered) -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#EFEFEF"/>  <!-- Light gray background -->
            <corners android:radius="10dp"/>
            <stroke android:width="3dp" android:color="#3e92fc"/> <!-- Black border on focus -->
        </shape>
        <padding android:left="5dp" android:right="5dp"/>
        <size android:width="10dp" android:height="10dp"/>
    </item>

    <!-- Default state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>  <!-- White background -->
            <corners android:radius="10dp"/>
            <stroke android:width="2dp" android:color="#888888"/> <!-- Gray border -->
        </shape>
    </item>

</selector>
